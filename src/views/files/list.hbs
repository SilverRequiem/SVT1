<div class="container p-4">
    <div class="row">
        {{#each documentos}}
            <div class="col-md-4">
                <div class="card text-center">
                     <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{NombreDoc}}
                        </h3>
                    </a>

                        <a href="/files/delete/{{DocID}}" class="btn btn-danger">Eliminar</a>
                    </div>
                </div>
            </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No existen aun ningun archivo</p>
                <a href="/upload">Sube alguno</a>
            </div>
        </div>
        {{/each}}
        
        
    </div>
</div>